<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mdove.passwordguard.main.model.vm.ItemMainPasswordVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_item_password_normal"
        android:layout_marginLeft="@dimen/margin_item_password_normal"
        android:layout_marginRight="@dimen/margin_item_password_normal">
        <RelativeLayout
            android:id="@+id/layout_top"
            android:background="@drawable/bg_normal_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_top_height">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@{viewModel.mTitle}"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="密码名称" />
            <TextView
                android:id="@+id/tv_new"
                android:layout_width="wrap_content"
                android:text="New"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_password_normal_new"
                android:textColor="@color/white"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_top"
            android:background="@color/white_t_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_str_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:text="账号"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_password_normal_height"
                android:gravity="center_vertical"
                android:text="@{viewModel.mUserName}"
                android:textColor="@color/black"
                android:textSize="@dimen/size_item_password_normal"
                tools:text="账号详情" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_username"
            android:background="@drawable/bg_normal_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_str_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:text="密码"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_password_normal_height"
                android:gravity="center_vertical"
                android:text="@{viewModel.mPassword}"
                android:textColor="@color/black"
                android:textSize="@dimen/size_item_password_normal"
                tools:text="密码详情" />
        </LinearLayout>


    </RelativeLayout>
</layout>
